<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zimmer.bandfair">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity"></activity>
        <activity android:name=".ui.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.RegisterPage1" android:parentActivityName=".ui.SplashScreen"/>
        <activity android:name=".ui.RegisterPage2" android:parentActivityName=".ui.RegisterPage1"/>
        <activity android:name=".ui.RegisterPage3" android:parentActivityName=".ui.RegisterPage2"/>
        <activity android:name=".ui.ProfilePage" android:parentActivityName=".ui.MainActivity"></activity>
    </application>

</manifest>